SELECT ?org ?orgLabel ?leader ?leaderLabel ?country ?countryLabel ?website
WHERE {
  ?org wdt:P31/wdt:P279* wd:Q43229.  # instance of organization (or subclasses)

  OPTIONAL { ?org wdt:P17 ?country. }   # country
  OPTIONAL { ?org wdt:P856 ?website. }  # official website

  # --- leader fallback logic ---
  OPTIONAL { ?org wdt:P488 ?leader_p488. }    # chairperson
  OPTIONAL { ?org wdt:P169 ?leader_p169. }    # chief executive officer
  OPTIONAL { ?org wdt:P1037 ?leader_p1037. }  # director / manager

  BIND(COALESCE(?leader_p488, ?leader_p169, ?leader_p1037) AS ?leader)

  SERVICE wikibase:label { bd:serviceParam wikibase:language "en". }
}
LIMIT 100
